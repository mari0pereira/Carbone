<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a1a1a"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="24dp"
        android:paddingBottom="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- HEADER -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="32dp">

                <!-- Menu -->
                <ImageView
                    android:id="@+id/menu"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/menu2"
                    android:layout_weight="0"
                    android:padding="4dp"
                    app:tint="#ffffff" />

                <!-- Espaço entre Menu - Foto -->
                <View
                    android:layout_width="0dp"
                    android:layout_height="1dp"
                    android:layout_weight="1" />

                <!-- Foto do usuário -->
                <ImageView
                    android:id="@+id/userFoto"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:background="@drawable/circle_background"
                    android:scaleType="centerCrop"
                    android:layout_weight="0" />

            </LinearLayout>

            <!-- Texto "TRILHE SEU PRÓPRIO CAMINHO" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TRILHE SEU PRÓPRIO CAMINHO"
                android:textColor="#888888"
                android:textSize="12sp"
                android:fontFamily="@font/lato_bold"
                android:letterSpacing="0.15"
                android:layout_marginBottom="8dp" />

            <!-- Título "DESTAQUES EXCLUSIVOS" -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="DESTAQUES \nEXCLUSIVOS"
                android:textColor="@color/white"
                android:textSize="36sp"
                android:fontFamily="@font/space_grotesk_bold"
                android:lineSpacingExtra="-6dp"
                android:layout_marginBottom="24dp" />

            <!-- Descrição -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experimente a paixão por pedalar com bicicletas que elevam seu espírito e estilo. Seja audaz."
                android:textColor="#cccccc"
                android:textSize="17sp"
                android:fontFamily="@font/lato"
                android:lineSpacingExtra="4dp"
                android:layout_marginBottom="48dp" />

            <!-- Shop by category -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shop by category"
                android:textColor="#ffffff"
                android:textSize="20sp"
                android:fontFamily="@font/lato_black"
                android:layout_marginBottom="32dp" />

            <!-- Card MOUNTAIN BIKE -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="MOUNTAIN BIKE"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:fontFamily="@font/calistoga"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2a2a2a">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gravel" />
                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnExploreMountain"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPLORE"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:fontFamily="@font/lato_bold"
                            android:background="@drawable/explore_button"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="10dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:stateListAnimator="@null"
                            android:elevation="2dp" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <!-- Card GRAVEL -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="40dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="GRAVEL"
                    android:textColor="#ffffff"
                    android:textSize="20sp"
                    android:fontFamily="@font/calistoga"
                    android:layout_marginBottom="12dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        app:cardCornerRadius="20dp"
                        app:cardElevation="0dp"
                        app:cardBackgroundColor="#2a2a2a">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/gravel" />

                    </androidx.cardview.widget.CardView>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="16dp">

                        <View
                            android:layout_width="0dp"
                            android:layout_height="1dp"
                            android:layout_weight="1" />

                        <Button
                            android:id="@+id/btnExploreGravel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EXPLORE"
                            android:textColor="#ffffff"
                            android:textSize="12sp"
                            android:fontFamily="@font/lato_bold"
                            android:background="@drawable/explore_button"
                            android:paddingHorizontal="20dp"
                            android:paddingVertical="10dp"
                            android:minHeight="0dp"
                            android:minWidth="0dp"
                            android:stateListAnimator="@null"
                            android:elevation="2dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- BARRA DE NAVEGAÇÃO INFERIOR -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1a1a1a"
        android:elevation="8dp"
        app:itemIconTint="#ffffff"
        app:itemTextColor="#888888"
        app:labelVisibilityMode="labeled"
        app:menu="@menu/bottom_navigation_menu" />
</LinearLayout>